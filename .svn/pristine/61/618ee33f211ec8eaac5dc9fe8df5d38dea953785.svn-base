// Datetime
$("div[datePicker='dateTime'").datetimepicker({
    format: "DD/MM/YYYY HH:mm",
    locale: isArabicUI() ? moment.locale("ar-sa") : moment.locale("en")
});

// Date
$("div[datePicker='date'").datetimepicker({
    format: "DD/MM/YYYY",
    minDate: "1900/01/01",
    locale: isArabicUI() ? moment.locale("ar-sa") : moment.locale("en")
});

// Time
$("div[datePicker='time'").datetimepicker({
    format: "LT",
    locale: isArabicUI() ? moment.locale("ar-sa") : moment.locale("en")
});

$(".clockpicker").clockpicker({
    twelvehour: false,
    donetext: isArabicUI() ? "تم" : "Done"
});