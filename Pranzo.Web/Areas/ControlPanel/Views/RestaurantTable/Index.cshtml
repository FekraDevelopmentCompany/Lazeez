@using Lazeez.Resource.ControlPanel
@using Lazeez.Resource.Shared
@{
    ViewBag.Title = "Tables";
}


<form class="form-horizontal">
    <h2>@Resources.Res_Search</h2>
    <h4>@RestaurantTable.RestaurantTables</h4>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div>
                <div class="form-group">
                    <label class="col-md-2 control-label">@RestaurantTable.RestaurantName</label>
                    <div class="col-md-10">
                        <input id="txt_RestaurantId" type="hidden" value="@ViewBag.RestaurantID">
                        <input id="txt_RestaurantName" type="text" class="form-control" disabled="disabled" value="@ViewBag.RestaurantName" />
                    </div>
                </div>

                <div class="form-group">
                    <div  class="col-md-2">
                        <label class="control-label">@RestaurantTable.GuestCountFrom</label>
                    </div>
                    <div  class="col-md-4">
                        <input id="txt_GuestCountFrom" type="number" class="form-control" />
                    </div>
                    <div  class="col-md-2">
                        <label class="col-md-2 control-label">@RestaurantTable.To</label>
                    </div>
                    <div  class="col-md-4">
                        <input id="txt_GuestCountTo" type="number" class="form-control" />
                    </div>
                </div>
            </div>
            <hr />
            <div>
                @Html.Partial("Buttons/_Search")
                @Html.Partial("Buttons/_Cancel")
                @Html.Partial("Buttons/_Add")
            </div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-lg-12">
        <table id="grid" class="table table-striped table-hover table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>@RestaurantTable.ID</th>
                    <th>@RestaurantTable.GuestCount</th>
                    <th>@RestaurantTable.Description</th>
                    <th width="16px"></th>
                    <th width="16px"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{

    <script src="~/Areas/ControlPanel/Scripts/RestaurantTable/Index.js"></script>
    <script>
        var links = {
            addEdit: '@Url.Action("AddEdit", "RestaurantTable")',
            delete: '@Url.Action("Delete", "RestaurantTable")',
            search: '@Url.Action("Search", "RestaurantTable")'
        };
        var tooltip = {
            edit: '@Resources.Res_Edit',
            delete: '@Resources.Res_Delete'
        }

    </script>
}
