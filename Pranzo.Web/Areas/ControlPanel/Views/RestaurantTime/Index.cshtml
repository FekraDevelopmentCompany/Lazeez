@using Lazeez.Helper
@using Lazeez.Resource.ControlPanel
@using Lazeez.Resource.Shared
@using Lazeez.Web.Helpers

@{
    ViewBag.Title = "Restaurant Time";
}

<form class="form-horizontal">
    <h2>@Resources.Res_Search</h2>
    <h4>@RestaurantTime.RestaurantTimes</h4>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div>
                <div class="form-group">
                    <label class="col-md-2 control-label">@RestaurantTime.RestaurantName</label>
                    <div class="col-md-10">
                        <input id="txt_RestaurantId" type="hidden" value="@ViewBag.RestaurantID">
                        <input id="txt_RestaurantName" type="text" class="form-control" disabled="disabled" value="@ViewBag.RestaurantName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">@RestaurantTime.Day</label>
                    <div class="col-md-10">
                        @Html.EnumsDropDownList("ddl_WeekDays", new Enums.WeekDays(), new { @id = "ddl_WeekDays", @class = "form-control" }, Resources.Res_All)
                    </div>
                </div>
            </div>
            <hr />
            <div>
                @Html.Partial("Buttons/_Search")
                @Html.Partial("Buttons/_Cancel")
                @Html.Partial("Buttons/_Add")
            </div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-lg-12">
        <table id="grid" class="table table-striped table-hover table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>@RestaurantTime.ID</th>
                    <th>@RestaurantTime.Day</th>
                    <th>@RestaurantTime.OpenTime</th>
                    <th>@RestaurantTime.CloseTime</th>
                    <th width="16px"></th>
                    <th width="16px"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{

    <script src="~/Areas/ControlPanel/Scripts/RestaurantTime/Index.js"></script>
    <script>
        var links = {
            addEdit: '@Url.Action("AddEdit", "RestaurantTime")',
            delete: '@Url.Action("Delete", "RestaurantTime")',
            search: '@Url.Action("Search", "RestaurantTime")'
        };
        var tooltip = {
            edit: '@Resources.Res_Edit',
            delete: '@Resources.Res_Delete'
        }

    </script>
}