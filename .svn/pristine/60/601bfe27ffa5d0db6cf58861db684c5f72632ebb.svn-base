@using Pranzo.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PRANZO | HOME</title>

    <!-- Bootstrap -->
    <link href="~/Content/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")

    <link href="~/Content/custom/custom.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>

<body class="nav-md">
    <div aria-hidden="true" role="dialog" id="modal" class="modal fade" data-backdrop="static" data-keyboard="false"></div>
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index", "Home")" class="site_title"><span>PRANZO</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile ">
                        <div class="profile_pic">
                            <img src="~/Content/images/common-icons/img.jpg" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@GlobalSettings.CurrentUserName</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard </a></li>
                                <li><a href="@Url.Action("Index", "Restaurant")"><i class="fa fa-file-text-o"></i> Restaurants List </a></li>
                                <li><a href="@Url.Action("Index", "RestaurantOrder")"><i class="fa fa-copy"></i> Orders </a></li>
                                <li><a href="@Url.Action("Index", "RestaurantOrder")"><i class="fa fa-users"></i> Users </a></li>
                                <li><a href="@Url.Action("Index", "MasterData")"><i class="fa fa-table"></i> Master Data </a></li>
                                @*<li><a href="general_elements.html"><i class="fa fa-calendar"></i> Booking System </a></li>
                                    <li><a href="general_elements.html"><i class="fa fa-trophy"></i> Collections </a></li>
                                    <li><a href="general_elements.html"><i class="fa fa-pie-chart"></i> Reports </a></li>
                                    <li><a href="general_elements.html"><i class="fa fa-comment-o"></i> Feedback </a></li>*@
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->

                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right"></ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
                <br />
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    PRANZO | Lorem ipsum
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->

        </div>
    </div>

    <!-- Render Scripts -->
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatablegrid")
    @Scripts.Render("~/bundles/pluginscripts")
    @Scripts.Render("~/bundles/customscripts")
    <script src="~/Content/plugins/lobibox/js/notifications.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>